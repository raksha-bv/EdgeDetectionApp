<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_color">

    <!-- Minimal Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_color"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDGE VISION"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:letterSpacing="0.15"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/accent_color"
            android:textSize="12sp"
            android:letterSpacing="0.05"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />



        <!-- Frame Number Display -->
        <TextView
            android:id="@+id/frameNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frame: 0"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start" />

        <!-- Minimal Shader Spinner -->
        <Spinner
            android:id="@+id/shaderEffectSpinner"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

    <!-- Display Area - Seamless Design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="2dp">

        <!-- Camera Preview -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:layout_marginBottom="2dp">

            <androidx.camera.view.PreviewView
                android:id="@+id/cameraPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:scaleType="fillCenter" />

            <!-- Floating Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textSize="9sp"
                android:textColor="@color/text_primary"
                android:letterSpacing="0.2"
                android:background="@color/accent_color"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:alpha="0.9" />
        </FrameLayout>

        <!-- Processed Output -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/primary_color">

            <ImageView
                android:id="@+id/processedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_color"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false" />

            <!-- Floating Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROCESSED"
                android:textSize="9sp"
                android:textColor="@color/primary_color"
                android:letterSpacing="0.2"
                android:background="@color/text_primary"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:alpha="0.9" />
        </FrameLayout>
    </LinearLayout>

    <!-- Minimal Control Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/primary_color"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/startCameraButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/camera_button_background"
            android:src="@drawable/ic_camera"
            android:contentDescription="Start Camera"
            android:scaleType="centerInside"
            android:tint="@color/accent_color" />
    </FrameLayout>

</LinearLayout>